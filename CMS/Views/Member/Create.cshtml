@using CMS.Models.Models
@model Members

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Member</h2>
            <hr />
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3"> 
            @* <div class="col-6"> *@
                <div class="mb-3 p-1">
                    <label asp-for="FirstName" class="p-0"></label>
                    <input asp-for="FirstName" type="text" class="form-control" />
                </div>
                <div class="mb-3 p-1">
                    <label asp-for="LastName" class="p-0"></label>
                    <input asp-for="LastName" type="text" class="form-control" />
                </div>
                <div class="mb-3 p-1">
                    <label asp-for="Email" class="p-0"></label>
                    <input asp-for="Email" type="email" class="form-control" />
                </div>
            @* </div> *@
            @* <div class="col-6"> *@
                <div class="mb-3 p-1">
                    <label asp-for="Phone" class="p-0"></label>
                    <input asp-for="Phone" type="text" class="form-control" />
                </div>
                <div class="mb-3 p-1">
                    <label asp-for="Address" class="p-0"></label>
                    <input asp-for="Address" type="text" class="form-control" />
                </div>
                <div class="mb-3 p-1">
                    <label asp-for="MemberSince" class="p-0"></label>
                    <input asp-for="MemberSince" type="text" class="form-control datepicker" />
                </div>
            @* </div> *@
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Member" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
            </div>
        </div>
       
        
       
    </div>
</form>