@using CMS.Models.Models
@model List<Members>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Member List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Member" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Create New Member
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Member Since</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.FirstName))
        {
            
   
        <tr>
                <td>@obj.FirstName</td>
                <td>@obj.LastName</td>
                <td>@obj.Email</td>
                <td>@obj.Phone</td>
                <td>@obj.Address</td>
                <td>@obj.MemberSince</td>
        </tr>
        }
    </tbody>

</table>
</div>
